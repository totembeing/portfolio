---
import Layout from '../layouts/Layout.astro';

const skillGroups = [
	{
		title: 'Frontend',
		description: 'Building responsive, accessible interfaces with modern tooling.',
		items: ['HTML', 'CSS', 'JavaScript', 'TypeScript', 'React', 'Astro', 'Tailwind CSS'],
	},
	{
		title: 'Backend',
		description: 'Designing APIs and automation that are dependable and clear.',
		items: ['Node.js', 'Express', 'Python', 'Java', 'C#', 'SQL', 'REST APIs'],
	},
	{
		title: 'Tools',
		description: 'Everyday workflow and deployment utilities.',
		items: ['Git', 'GitHub', 'VS Code', 'Eclipse', 'Android Studio', 'Azure AI Foundry', 'Bash', 'PowerShell', 'Postman', 'GitHub Pages'],
	},
	{
		title: 'Currently learning',
		description: 'Focused on leveling up through projects and practice.',
		items: ['Kotlin', 'Linux', 'CI/CD (GitHub Actions)', 'Python (Pandas)'],
	},
];
---

<Layout title="Skills / Stack">
	<section class="w-full max-w-3xl space-y-8" id="skills">
		<header class="space-y-2 text-center">
			<p class="text-sm tracking-[0.12em] text-neutral-400 uppercase">Skills / Stack</p>
			<h1 class="text-3xl lg:text-4xl font-bold text-white">What I work with</h1>
			<p class="text-lg text-neutral-300">
				A snapshot of the tools and technologies I use to build projects end-to-end.
			</p>
		</header>

		<div class="grid gap-4">
			{skillGroups.map((group) => (
				<article class="rounded-2xl border border-white/10 bg-white/5 p-5">
					<div class="space-y-2">
						<h2 class="text-lg font-semibold text-white">{group.title}</h2>
						<p class="text-sm text-neutral-300">{group.description}</p>
					</div>
					<div class="mt-3 flex flex-wrap gap-2">
						{group.items.map((item) => (
							<span class="rounded-full border border-white/20 bg-white/10 px-3 py-1 text-xs font-semibold text-white">
								{item}
							</span>
						))}
					</div>
				</article>
			))}
		</div>
	</section>
</Layout>
