---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
	<section class="max-w-2xl space-y-4" id="contact">
		<p class="text-sm tracking-[0.12em] text-neutral-400 uppercase">Contact</p>
		<h1 class="text-3xl lg:text-4xl font-bold text-white">Get in touch</h1>
		<p class="text-lg text-neutral-300">
			Reach out via LinkedIn or GitHub using the links in the sidebar. You can also add a contact form or email
			link here.
		</p>
	</section>
</Layout>
